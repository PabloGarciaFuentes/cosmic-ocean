---
import { Play, ChevronDown } from "lucide-react";
import OuttaSpace from "../outtaSpace.astro";
import "./Hero.css";
---

<section id="hero" class="hero">
  <!-- Cosmic Nebula Background -->
  <div class="hero-cosmic-bg" aria-hidden="true">
    <div class="nebula-1"></div>
    <div class="nebula-2"></div>
    <div class="nebula-3"></div>
    <OuttaSpace />
    <!-- <div class="video-overlay"></div> -->
  </div>

  <div class="hero-content">
    <div class="hero-tagline">Electronic Music Producer & DJ</div>

    <h1 class="hero-title">
      <span class="title-line cosmic">COSMIC</span>
      <span class="title-line ocean">OCEAN</span>
    </h1>

    <p class="hero-description">
      Crafting immersive sonic journeys through progressive house, dance, and
      atmospheric soundscapes.
    </p>

    <div class="hero-cta">
      <a href="#music" class="btn-primary">
        <Play size={18} />
        Listen Now
      </a>
      <a href="#about" class="btn-secondary"> Explore </a>
    </div>
  </div>

  <!-- Scroll indicator -->
  <div class="scroll-indicator">
    <span>Scroll to explore</span>
    <ChevronDown size={24} className="scroll-arrow" />
  </div>

  <!-- Wave decoration -->
  <div class="hero-waves" aria-hidden="true">
    <svg class="wave wave-1" viewBox="0 0 1440 320" preserveAspectRatio="none">
      <path
        fill="currentColor"
        d="M0,160L48,170.7C96,181,192,203,288,192C384,181,480,139,576,128C672,117,768,139,864,165.3C960,192,1056,224,1152,213.3C1248,203,1344,149,1392,122.7L1440,96L1440,320L1392,320C1344,320,1248,320,1152,320C1056,320,960,320,864,320C768,320,672,320,576,320C480,320,384,320,288,320C192,320,96,320,48,320L0,320Z"
      ></path>
    </svg>
    <svg class="wave wave-2" viewBox="0 0 1440 320" preserveAspectRatio="none">
      <path
        fill="currentColor"
        d="M0,256L48,234.7C96,213,192,171,288,165.3C384,160,480,192,576,213.3C672,235,768,245,864,224C960,203,1056,149,1152,144C1248,139,1344,181,1392,202.7L1440,224L1440,320L1392,320C1344,320,1248,320,1152,320C1056,320,960,320,864,320C768,320,672,320,576,320C480,320,384,320,288,320C192,320,96,320,48,320L0,320Z"
      ></path>
    </svg>
  </div>
</section>

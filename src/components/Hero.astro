---
import { Play, ChevronDown } from "lucide-react";
import OuttaSpace from "./outtaSpace.astro";
---

<section id="hero" class="hero">
    <!-- Cosmic Nebula Background -->
    <div class="hero-cosmic-bg" aria-hidden="true">
        <div class="nebula-1"></div>
        <div class="nebula-2"></div>
        <div class="nebula-3"></div>
        <OuttaSpace />
        <!-- <div class="video-overlay"></div> -->
    </div>

    <div class="hero-content">
        <div class="hero-tagline">Electronic Music Producer & DJ</div>

        <h1 class="hero-title">
            <span class="title-line cosmic">COSMIC</span>
            <span class="title-line ocean">OCEAN</span>
        </h1>

        <p class="hero-description">
            Crafting immersive sonic journeys through progressive house, dance,
            and atmospheric soundscapes.
        </p>

        <div class="hero-cta">
            <a href="#music" class="btn-primary">
                <Play size={18} />
                Listen Now
            </a>
            <a href="#about" class="btn-secondary"> Explore </a>
        </div>
    </div>

    <!-- Scroll indicator -->
    <div class="scroll-indicator">
        <span>Scroll to explore</span>
        <ChevronDown size={24} className="scroll-arrow" />
    </div>

    <!-- Wave decoration -->
    <div class="hero-waves" aria-hidden="true">
        <svg
            class="wave wave-1"
            viewBox="0 0 1440 320"
            preserveAspectRatio="none"
        >
            <path
                fill="currentColor"
                d="M0,160L48,170.7C96,181,192,203,288,192C384,181,480,139,576,128C672,117,768,139,864,165.3C960,192,1056,224,1152,213.3C1248,203,1344,149,1392,122.7L1440,96L1440,320L1392,320C1344,320,1248,320,1152,320C1056,320,960,320,864,320C768,320,672,320,576,320C480,320,384,320,288,320C192,320,96,320,48,320L0,320Z"
            ></path>
        </svg>
        <svg
            class="wave wave-2"
            viewBox="0 0 1440 320"
            preserveAspectRatio="none"
        >
            <path
                fill="currentColor"
                d="M0,256L48,234.7C96,213,192,171,288,165.3C384,160,480,192,576,213.3C672,235,768,245,864,224C960,203,1056,149,1152,144C1248,139,1344,181,1392,202.7L1440,224L1440,320L1392,320C1344,320,1248,320,1152,320C1056,320,960,320,864,320C768,320,672,320,576,320C480,320,384,320,288,320C192,320,96,320,48,320L0,320Z"
            ></path>
        </svg>
    </div>
</section>

<style>
    .hero {
        position: relative;
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        padding: 5rem 2rem 2rem 2rem;
        overflow: hidden;
    }

    .hero-cosmic-bg {
        position: absolute;
        inset: 0;
        z-index: 0;
        background: var(--color-cosmic-void);
        overflow: hidden;
    }

    /* Nebula Blobs */
    .nebula-1,
    .nebula-2,
    .nebula-3 {
        position: absolute;
        width: 100%;
        height: 100%;
        filter: blur(80px);
        opacity: 0.25;
        border-radius: 50%;
    }

    .nebula-1 {
        top: -50%;
        left: -30%;
        background: radial-gradient(
            circle,
            var(--color-glow-cyan) 0%,
            transparent 70%
        );
        animation: nebulaFloat 10s ease-in-out infinite;
    }

    .nebula-2 {
        bottom: -50%;
        right: -30%;
        background: radial-gradient(
            circle,
            var(--color-glow-teal) 0%,
            transparent 70%
        );
        animation: nebulaFloat 15s ease-in-out infinite reverse;
    }

    .nebula-3 {
        top: 20%;
        left: 30%;
        background: radial-gradient(
            circle,
            var(--color-glow-violet) 0%,
            transparent 70%
        );
        animation: nebulaFloat 7s ease-in-out infinite 2s;
    }

    @keyframes nebulaFloat {
        0%,
        100% {
            transform: translate(0, 0) scale(1);
        }
        33% {
            transform: translate(5%, 5%) scale(1.1);
        }
        66% {
            transform: translate(-5%, 2%) scale(0.9);
        }
    }

    /* .video-overlay {
        position: absolute;
        inset: 0;
        background: linear-gradient(
            to bottom,
            rgba(5, 5, 8, 0.4) 0%,
            var(--color-cosmic-void) 100%
        );
        z-index: 1;
    } */

    .hero-content {
        text-align: center;
        max-width: 900px;
        z-index: 5; /* Asegurar que est√© muy por encima */
    }

    .hero-tagline {
        font-family: var(--font-display);
        font-size: 0.875rem;
        letter-spacing: 0.3em;
        text-transform: uppercase;
        color: var(--color-glow-cyan);
        margin-bottom: 1.5rem;
        opacity: 0;
        animation: fadeSlideUp 0.8s ease forwards 0.3s;
    }

    .hero-title {
        display: flex;
        flex-direction: column;
        gap: 0;
        margin-bottom: 2rem;
    }

    .title-line {
        font-family: var(--font-display);
        font-size: clamp(4rem, 15vw, 12rem);
        font-weight: 900;
        line-height: 0.9;
        letter-spacing: -0.02em;
        opacity: 0;
    }

    .title-line.cosmic {
        background: linear-gradient(
            135deg,
            var(--color-text-primary) 100%,
            var(--color-glow-cyan) 0%
        );
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        animation: fadeSlideUp 0.8s ease forwards 0.5s;
    }

    .title-line.ocean {
        background: linear-gradient(
            135deg,
            var(--color-glow-cyan),
            var(--color-glow-violet)
        );
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        animation: fadeSlideUp 0.8s ease forwards 0.7s;
    }

    .hero-description {
        font-size: 1rem;
        color: var(--color-text-secondary);
        max-width: 500px;
        margin: 0 auto 3rem;
        opacity: 0;
        animation: fadeSlideUp 0.8s ease forwards 0.9s;
        letter-spacing: 0.1em;
    }

    .hero-cta {
        display: flex;
        gap: 1rem;
        justify-content: center;
        flex-wrap: wrap;
        opacity: 0;
        animation: fadeSlideUp 0.8s ease forwards 1.1s;
    }

    .btn-secondary {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 1rem 2rem;
        background: transparent;
        color: var(--color-text-primary);
        font-family: var(--font-display);
        font-weight: 600;
        font-size: 0.875rem;
        letter-spacing: 0.05em;
        text-transform: uppercase;
        border-radius: 0.5rem;
        border: 1px solid rgba(255, 255, 255, 0.2);
        transition: all var(--duration-normal) var(--ease-fluid);
        cursor: pointer;
        text-decoration: none;
    }

    .btn-secondary:hover {
        background: rgba(255, 255, 255, 0.05);
        border-color: var(--color-glow-cyan);
        color: var(--color-glow-cyan);
    }

    .scroll-indicator {
        position: absolute;
        left: 50%;
        bottom: 2%;
        transform: translateX(-50%);
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 0.5rem;
        color: var(--color-text-muted);
        font-size: 0.75rem;
        letter-spacing: 0.1em;
        text-transform: uppercase;
        opacity: 0;
        animation: fadeIn 1s ease forwards 1.5s;
    }

    .scroll-arrow {
        animation: bounce 2s ease-in-out infinite;
    }

    .hero-waves {
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        height: 28rem;
        pointer-events: none;
    }

    .wave {
        position: absolute;
        bottom: 0;
        left: 0;
        width: 105%;
        height: 100%;
    }

    .wave-1 {
        color: rgba(0, 212, 255, 0.05);
        animation: wave 8s ease-in-out infinite;
    }

    .wave-2 {
        color: rgba(168, 85, 247, 0.05);
        animation: wave 10s ease-in-out infinite reverse;
    }

    @keyframes fadeSlideUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @keyframes fadeIn {
        from {
            opacity: 0;
        }
        to {
            opacity: 1;
        }
    }

    @keyframes bounce {
        0%,
        100% {
            transform: translateY(0);
        }
        50% {
            transform: translateY(8px);
        }
    }

    @keyframes wave {
        0%,
        100% {
            transform: translateX(0);
        }
        50% {
            transform: translateX(-3%);
        }
    }

    /* Responsive */
    @media (max-width: 768px) {
        .hero {
            padding: 1.5rem;
        }

        .hero-tagline {
            font-family: var(--font-display);
            font-size: 0.675rem;
            letter-spacing: 0.3em;
            text-transform: uppercase;
            color: var(--color-glow-cyan);
            margin-bottom: 1.5rem;
            opacity: 0;
            animation: fadeSlideUp 0.8s ease forwards 0.3s;
        }

        .hero-description {
            font-size: rem;
        }

        .hero-cta {
            flex-direction: column;
            width: 100%;
            max-width: 280px;
            margin: 0 auto;
        }

        .btn-primary,
        .btn-secondary {
            width: 100%;
            justify-content: center;
        }
    }

    @media (min-width: 769px) and (max-height: 750px) {
        .hero {
            padding: 6rem;
        }

        .hero-title span {
            font-size: 9rem;
        }

        .hero-description {
            font-size: 1rem;
        }

        .scroll-indicator {
            bottom: 2%;
        }
    }
</style>
